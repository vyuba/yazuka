<div class="product-grid-item text-white hover:text-red-600">
  <a href="{{ product.url }}">
    <div class="image-container">
      <img src="{{ product.featured_image | image_url: width: 400 }}" alt="Description of the image" height="" width="" loading="lazy">
      <div class="image__loader">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">
          <radialGradient id="a12" cx=".66" fx=".66" cy=".3125" fy=".3125" gradientTransform="scale(1.5)">
            <stop offset="0" stop-color="#FF0404"></stop>
            <stop offset=".3" stop-color="#FF0404" stop-opacity=".9"></stop>
            <stop offset=".6" stop-color="#FF0404" stop-opacity=".6"></stop>
            <stop offset=".8" stop-color="#FF0404" stop-opacity=".3"></stop>
            <stop offset="1" stop-color="#FF0404" stop-opacity="0"></stop>
          </radialGradient>
          <circle transform-origin="center" fill="none" stroke="url(#a12)" stroke-width="19" stroke-linecap="round" stroke-dasharray="200 1000" stroke-dashoffset="0" cx="100" cy="100" r="70">
            <animateTransform type="rotate" attributeName="transform" calcMode="spline" dur="2" values="360;0" keyTimes="0;1" keySplines="0 0 1 1" repeatCount="indefinite"></animateTransform>
          </circle>
          <circle transform-origin="center" fill="none" opacity=".2" stroke="#FF0404" stroke-width="19" stroke-linecap="round" cx="100" cy="100" r="70"></circle>
        </svg>
      </div>
    </div>
    <span class="product-grid-item-text">
      <h3>{{ product.title | highlight: search.terms }}</h3>
      <p class="product-grid-item-price">{{ product.price | money }}</p>
    </span>
  </a>
</div>


